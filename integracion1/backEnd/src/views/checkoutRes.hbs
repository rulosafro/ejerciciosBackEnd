<h1 class="h2  text-white">Historial de Pagos</h1> 
<p class="{{style}}">{{message}}</p>
<section class="d-flex flex-column mb-5 text-white">
  <a href="/views/products" class="btn btn-outline-info mb-2"> Volver a la tienda</a>
  {{#each tickets}}
  <div class="text-white flex flex-column bg-secondary rounded my-2 p-3">
    <div class="d-flex flex-column">
    <blockquote class=""> {{purchase_datetime}} </blockquote>
    Productos Comprados:
      <ul>
      {{#each productComprado}}
        <li> {{title}}: Precio: ${{price}} </li>      
      {{/each}}
      </ul>
    </div>
    <div class="d-flex flex-column">
    Sin stock:
    <ul>
      {{#each productNoComprado}}
    <li> {{title}} </li>
      {{/each}}
    </ul>
    </div>
  </div>
  {{/each}}
</section> 


